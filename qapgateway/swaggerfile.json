{
  "info": {
    "title": "API-Open Library",
    "version": "1.0.0",
    "description": "API for accessing book data from Open Library."
  },
  "tags": [],
  "paths": {
    "/api-open-library/search.json": {
      "get": {
        "summary": "Search for books by title",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "docs": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": {
                            "type": "string",
                            "description": "Unique key for the book in Open Library."
                          },
                          "isbn": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of ISBNs associated with the book."
                          },
                          "title": {
                            "type": "string",
                            "description": "Title of the book."
                          },
                          "author_name": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "List of author names."
                          },
                          "first_publish_year": {
                            "type": "integer",
                            "description": "Year the book was first published."
                          }
                        }
                      }
                    },
                    "start": {
                      "type": "integer",
                      "description": "Starting index of the results."
                    },
                    "numFound": {
                      "type": "integer",
                      "description": "Total number of results found."
                    }
                  }
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "docs": [
                        {
                          "key": "/works/OL158234W",
                          "isbn": [
                            "9780141040349"
                          ],
                          "title": "Pride and Prejudice",
                          "author_name": [
                            "Jane Austen"
                          ],
                          "first_publish_year": 1813
                        }
                      ],
                      "start": 0,
                      "numFound": 1
                    },
                    "summary": "Example response"
                  }
                }
              }
            },
            "description": "A list of books matching the search query."
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string",
              "example": "Pride and Prejudice"
            },
            "required": true,
            "description": "The search query string (e.g., book title, author)."
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "example": 1
            },
            "required": false,
            "description": "Page number of the results to retrieve."
          }
        ],
        "description": "Retrieve a list of books that match the search query."
      }
    },
    "/api-open-library/subjects/{subject}.json": {
      "get": {
        "summary": "Get books by subject",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "Subject key."
                    },
                    "name": {
                      "type": "string",
                      "description": "Name of the subject."
                    },
                    "works": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key": {
                            "type": "string",
                            "description": "Unique key for the work in Open Library."
                          },
                          "title": {
                            "type": "string",
                            "description": "Title of the work."
                          },
                          "authors": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "key": {
                                  "type": "string",
                                  "description": "Author's key."
                                },
                                "name": {
                                  "type": "string",
                                  "description": "Author's name."
                                }
                              }
                            },
                            "description": "List of authors."
                          },
                          "cover_id": {
                            "type": "integer",
                            "description": "ID of the cover image."
                          },
                          "edition_count": {
                            "type": "integer",
                            "description": "Number of editions available."
                          },
                          "first_publish_year": {
                            "type": "integer",
                            "description": "Year the work was first published."
                          }
                        }
                      }
                    },
                    "work_count": {
                      "type": "integer",
                      "description": "Number of works related to the subject."
                    }
                  }
                },
                "examples": {
                  "example-1": {
                    "value": {
                      "key": "science",
                      "name": "Science",
                      "works": [
                        {
                          "key": "/works/OL67890W",
                          "title": "A Brief History of Time",
                          "authors": [
                            {
                              "key": "/authors/OL12345A",
                              "name": "Stephen Hawking"
                            }
                          ],
                          "cover_id": 123456,
                          "edition_count": 45,
                          "first_publish_year": 1988
                        }
                      ],
                      "work_count": 1200
                    },
                    "summary": "Example response"
                  }
                }
              }
            },
            "description": "A list of books related to the specified subject."
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "subject",
            "schema": {
              "type": "string",
              "example": "science"
            },
            "required": true,
            "description": "The subject to retrieve books for (e.g., 'science')."
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "example": 10
            },
            "required": false,
            "description": "Number of results to return."
          }
        ],
        "description": "Retrieve a list of books related to a specific subject."
      }
    }
  },
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "https://azure-qap-dev-krakend.lemonflower-d4068cb0.westus2.azurecontainerapps.io/",
      "description": "QAP Gateway"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "schemas": {},
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}