          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "deck_id": {
                      "type": "string"
                    },
                    "success": {
                      "type": "boolean"
                    },
                    "shuffled": {
                      "type": "boolean"
                    },
                    "remaining": {
                      "type": "integer"
                    }
                  }
                }
              }
            },
            "description": "New shuffled deck"
          }
        },
        "parameters": [
          {
            "in": "query",
            "name": "deck_count",
            "schema": {
              "type": "integer",
              "example": 1
